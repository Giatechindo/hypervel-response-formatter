{
    "name": "giatechindo/hypervel-response-formatter",
    "description": "Standardized response formatter for Hypervel framework",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.2",
        "hypervel/framework": "^0.1"
    },
    "require-dev": {
        "hyperf/testing": "~3.1.0",
        "phpunit/phpunit": "^10.5",
        "phpunit/php-code-coverage": "^10.1"
    },
    "autoload": {
        "psr-4": {
            "Giatechindo\\HypervelResponseFormatter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Giatechindo\\HypervelResponseFormatter\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "hypervel": {
            "providers": [
                "Giatechindo\\HypervelResponseFormatter\\ResponseMacroServiceProvider"
            ]
        }
    },
    "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage"
}
}
